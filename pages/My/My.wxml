<view class='container'>
  <view class='head'> 
    <view class='headicon'>
      <image></image>
      <image src='/images/icon/message.png'></image>
      <image></image>
      <image src='{{headerImg}}'></image>
    </view>
    <view class='headBot'>
      <view class="page-body-info">
          <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}"></image>
          <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </view>           
        <button
          class='userBut'
          wx:if="{{canIUse}}"
          open-type="getUserInfo"
          bindgetuserinfo="bindGetUserInfo"
        >
          授权登录
        </button>
    </view>
  </view>
  <view>
    <view class='iconTen'>
      <view wx:if="{{daili || shangjia || geren}}" bindtap='Collection'>
        <image src='/images/icon/collct.png'></image>
        <view>收藏</view>
      </view>
      <view wx:if="{{daili || shangjia || geren}}" bindtap='comment'>
        <image src='/images/icon/comment.png'></image>
        <view>评论</view>
      </view>
      <view wx:if="{{daili || shangjia || geren}}" bindtap='browse'>
        <image src='/images/icon/lately.png'></image>
        <view>最近浏览</view>
      </view>
      <view wx:if="{{daili}}" bindtap='daili'>
        <image src='/images/icon/handshake.png'></image>
        <view>发展代理</view>
      </view>
      <view wx:if="{{daili}}" bindtap='khgl'>
        <image src='/images/icon/manage.png'></image>
        <view>客户管理</view>
      </view>
      <view wx:if="{{daili}}" bindtap='khgz'>
        <image src='/images/icon/user.png'></image>
        <view>客户跟踪</view>
      </view>
      <view wx:if="{{shangjia}}" bindtap='shangjia'>
        <image src='/images/icon/handshake.png'></image>
        <view>查看用户</view>
      </view>
      <view wx:if="{{geren}}" bindtap='geren'>
        <image src='/images/icon/handshake.png'></image>
        <view>我要合作</view>
      </view>
      <view wx:if="{{quyu}}" bindtap='yue'>
        <image src='/images/icon/yue.png'></image>
        <view>余额</view>
      </view>
      <view wx:if="{{quyu}}" bindtap='History'>
        <image src='/images/icon/yongjin.png'></image>
        <view>历史佣金</view>
      </view>
      <view wx:if="{{quyu}}" bindtap='Month'>
        <image src='/images/icon/yongjin.png'></image>
        <view>本月佣金</view>
      </view>
    </view>
    <view wx:if="{{daili}}" class='team'>
      <view>我的团队</view>
      <view class='teamContent'>
        <view class='teamIcon'>
          <image src='/images/icon/team.png'></image>
          <view>推广的人数</view>
          <view>65</view>
        </view>
        <view class='teamMoney'>
          <view>0</view>
          <view>今日（元）</view>
          <view>0</view>
          <view>本月（元）</view>
        </view>
        <view class='teamVi'>
          <view bindtap='tixian'>提现</view>
          <view bindtap='Todetails'>明细</view>
          <view class='clear'></view>
          <view>45</view>
          <view>积累（元）</view>
        </view>
      </view>
    </view>
  </view>
  <view class='clear'></view>
  <view wx:if="{{daili}}" class='content'>
    <view class='contentList'>
      <view>
        <image src='/images/image/header.png'></image>
      </view>
      <view>
        <view>青柠味的小兔</view>
        <image src='/images/icon/team2.png'></image>
        <view>5</view>
        <view class='clear'></view>
        <view>转发了50次</view>
      </view>
      <view>12.3元</view>
    </view>
    <view class='clear'></view>
    <view class='contentList'>
      <view>
        <image src='/images/image/header.png'></image>
      </view>
      <view>
        <view>青柠味的小兔</view>
        <image src='/images/icon/team2.png'></image>
        <view>5</view>
        <view class='clear'></view>
        <view>转发了50次</view>
      </view>
      <view>12.3元</view>
    </view>    
  </view>
</view>