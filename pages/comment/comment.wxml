<view>
  <view class='commentList' wx:for="{{comment}}" wx:key="index">
    <view class='comLeft'>
      <image src='/images/image/header.png'></image>
    </view>
    <view class='comRight'>
      <view class='name'>我的小宝贝</view>
      <view class='time'>{{item.created_at}}</view>
      <view class='clear'></view>
      <view class='fen'>
        <view>打分</view>
        <image wx:for="{{item.rate}}" wx:key="index" src='/images/icon/stargreen.png'></image>
      </view>
      <view class='clear'></view>
      <view class='commentText'>{{item.content}}</view>
      <view class='commentImg'>
        <image src='{{ImgHead}}{{images}}'></image>

      </view>
      <view class='clear'></view>
    </view>
    <view class='clear'></view>
  </view>
</view>