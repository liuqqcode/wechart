.myschool{
  margin-left: 60rpx;
  font-size: 40rpx;
  font-weight: 600
}
.schoolList{
  margin: 30rpx 60rpx;
}
.schoolLeft,.schoolRight{
  float: left
}
.schoolLeft{
  width: 30%;
}
.schoolLeft>image{
  width: 170rpx;
  height: 150rpx;
}
.schoolRight{
  width: 70%;
  overflow: hidden;
}
.schoolRight>view:nth-child(1){
  font-size:30rpx;
  font-family:"PingFang";
  color:rgb(0, 0, 0);
  font-weight:bold;
  line-height:2;
}
.schoolRight>view:nth-child(2){
  font-size: 20rpx;
  color: #b4b4b4;
  line-height: 4;
}
.schoolRight>view:nth-child(2)>view:nth-child(1){
  float: left;
}
.schoolRight>view:nth-child(2)>view:nth-child(2){
  float: right;
}