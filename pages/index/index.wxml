<!--index.wxml-->
<view class="container">
  <view class='line'></view>
  <view class='frist'>
    <image class='head' src='/images/image/header.png'></image>
    <view class='dizi'>
        <view class='adresse'>{{city}}
          <image class='down'></image>  
        </view>
        <view class='tianqi'>{{weatherDesc}} {{dateC}}℃</view>
    </view>
    <view class='searchVi' bindtap='search'>
      <input class='search' placeholder='英语培训'></input>
      <image class='searchIcon' src='/images/icon/search.png'></image>
    </view>

  </view>
  <view class='clear'></view>
  <view class='swiper'>

        <swiper 
          class="swiper" 
          circular="true"
          next-margin="50rpx" 
          current-item-id="{{currentItemId}}" 
          previous-margin="50rpx"  
          bindchange="swiperChange"
        >  
          <block wx:for="{{backClass}}" wx:key="index">
            <swiper-item item-id="{{index}}" data-item-id="{{index}}" bindtap='clickChange'>  
              <view class='li'>
                <!-- <view class='li1 {{item}} {{currentItemId == index ? "selected" : ""}}' ></view> -->
                <image class='li1 {{item}} {{currentItemId == index ? "selected" : ""}}'  src='{{banner}}{{item}}'></image>
              </view> 
            </swiper-item>  
          </block>
        </swiper> 

  </view> 
  <view class='clear'></view>
  <view class='fuwu'>
      <swiper
        class='swiperItem'
        display-multiple-items="4.5"
      >
          <block wx:for="{{fuwuFenlei}}" wx:key="item">
            <swiper-item>
              <view class='fuwuitem fu{{index}}'>{{item}}</view>
            </swiper-item>
          </block>
        </swiper>
  </view>
  <view class='clear'></view>
  <view class='schoolList' wx:for="{{schoolList}}" wx:key="index" bindtap='school' data-id='{{item}}'>
    <view class='schoolLeft'>
      <view>{{item.name}}</view>
      <view>{{item.desc}}</view>
      <view class='{{group3}}'>
        <image src='/images/icon/redbag.png'></image>
        <view>{{item.gift_packet_amount}}</view>
        <view>仅{{item.gift_packet_range}}km内有效</view>
      </view>
      <view class='star'>
        <view>{{item.views}}</view>

        <image src='/images/icon/star.png'></image>
      </view>
      <view class='clear'></view>
      <view class='group4'>
        <view>￥{{item.lowest_lesson_price}}</view>
        <view>￥{{item.lowest_lesson_price_tag}}</view>
        <view></view>
        <view>{{item.lowest_lesson_price_discount}}折</view>
        <view>5km</view>
      </view>
    </view>
    <view class='schoolRight'>
      <image src= '{{schoolPicture}}{{item.cover}}'></image>
    </view>
    <view class='clear'></view>
  </view>
  <view class='{{noMore}}'>没有更多了</view>
</view>
